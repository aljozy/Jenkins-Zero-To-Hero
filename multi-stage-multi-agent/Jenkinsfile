pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh '''
                        javac HelloWorld.java
                        java HelloWorld
                    '''
                }
                echo 'Back-end stage completed, moving to Front-end...'
            }  
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
